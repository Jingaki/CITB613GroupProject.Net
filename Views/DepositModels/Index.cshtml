@model IEnumerable<GroupProjectDepositCatalogWebApp.Models.SearchResultEntity>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DepositName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TypeOfCurrency)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EffectiveAnnualInterestRate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MinSum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TypeOfInterest)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DepositName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TypeOfCurrency)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EffectiveAnnualInterestRate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MinSum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TypeOfInterest)
            </td>
            
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> |
                <a asp-action="CleanUp" asp-route-id="@item.Id">CleanUp</a>
            </td>
        </tr>
}
    </tbody>
</table>
