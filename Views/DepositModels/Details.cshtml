@if (Model.TypeOfInterest == InterestEnumType.Shifting && Model.ShiftingInteresData!= null)
{
    <div class="table-container">
        <table class="table" style="text-align:center">
            <thead>
                <tr>
                    <th>
                        Month
                    </th>
                    <th>
                        Yearly effective interest rate
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.ShiftingInteresData)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Month)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.YearlyEIR)
                        </td>
                    </tr>
                 }                
